<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:gravity="center_horizontal"
	android:layout_height="fill_parent" android:scrollbars="vertical" android:minHeight="200dip" android:background="#ffffffff">
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingBottom="10dip" android:layout_gravity="center_vertical" android:gravity="center_vertical" android:layout_marginTop="10dip">
		
	<LinearLayout android:orientation="vertical" android:id="@+id/ll" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="right|center_vertical" android:gravity="center|center_vertical">
    <TextView android:id="@+id/temp_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Temp: --" android:layout_marginRight="10dip" android:textColor="#000000" android:layout_marginLeft="10dip" android:textSize="20dip" android:height="40dip" android:paddingTop="10dip"></TextView>
    <TextView android:id="@+id/light_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Light: --" android:layout_marginRight="10dip" android:textColor="#000000" android:layout_marginLeft="10dip" android:textSize="20dip" android:height="40dip" android:paddingTop="10dip"></TextView>
    <TextView android:id="@+id/humid_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Humidity: --" android:layout_marginRight="10dip" android:textColor="#000000" android:layout_marginLeft="10dip" android:textSize="20dip" android:height="40dip" android:paddingTop="10dip"></TextView>        
    <TextView android:id="@+id/press_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pressure: --" android:layout_marginRight="10dip" android:textColor="#000000" android:layout_marginLeft="10dip" android:textSize="20dip" android:height="40dip" android:paddingTop="10dip"></TextView>            
    <TextView android:id="@+id/co2_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CO2: --" android:layout_marginRight="10dip" android:textColor="#000000" android:layout_marginLeft="10dip" android:textSize="20dip" android:height="40dip" android:paddingTop="10dip"></TextView>
</LinearLayout>

</LinearLayout>
<TextView android:id="@+id/date_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Last Detected: " android:layout_marginRight="10dip" android:textColor="#000000" android:layout_marginLeft="10dip" android:textSize="10dip" android:height="40dip" android:paddingTop="10dip"></TextView>
<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
</LinearLayout>
<LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
<Button android:text="Tweet" android:id="@+id/value_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dip"></Button>
</LinearLayout>


</LinearLayout>
